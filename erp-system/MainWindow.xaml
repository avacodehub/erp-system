<Window x:Class="erp_system.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:erp_system"
        xmlns:viewModel="clr-namespace:erp_system.MVVM.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions >
            <RowDefinition Height="80" />
            <RowDefinition Height="600" />
        </Grid.RowDefinitions>


        <StackPanel >
            <Button Content="Id. number"  VerticalAlignment="Stretch" Width="100" Height="50" Background="#FF41E81D" HorizontalAlignment="Left"/>
            <Button Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="100" Height="50" Background="#FFD7E219" Content="Search">
            </Button>
        </StackPanel>
        <StackPanel>
            <ContentControl Grid.Row="1" Content="{Binding CurrentView}"/>
        </StackPanel>
    </Grid>
</Window>
