<Window x:Class="erp_system.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:erp_system"
        xmlns:viewModel="clr-namespace:erp_system.MVVM.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions >
            <RowDefinition Height="50" />
            <RowDefinition Height="800" />
        </Grid.RowDefinitions>


        <StackPanel Orientation="Horizontal" >
            <Button Content="Id Number"  Width="100" Height="50" Background="#FF41E81D" Command="{Binding NewDetailCommand}" />
            <Button Grid.Column="1" Width="100" Height="50" Background="#FFD7E219" Content="Search" Command="{Binding FilterCommand}">
            </Button>
        </StackPanel>
        <ContentControl Grid.Row="1" Content="{Binding CurrentView}"/>
    </Grid>
</Window>
