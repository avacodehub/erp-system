<Window x:Class="erp_system.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:erp_system"
        xmlns:viewModel="clr-namespace:erp_system.MVVM.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1100">
    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions >
            <RowDefinition Height="32" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" >
            <Button Content="CREATE"  Width="100"  Background="#FF92FF7A" Command="{Binding NewDetailCommand}" />
            <Button Grid.Column="1" Width="100"  Background="#FFF8FF83" Content="SEARCH" Command="{Binding FilterCommand}">
            </Button>
        </StackPanel>
        <Border Grid.Row="1" Padding="12">
            <ContentControl Content="{Binding CurrentView}"/>
        </Border>
    </Grid>
</Window>
